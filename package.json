{
    "name": "stevenbister-remix-starter",
    "private": true,
    "description": "Starter files and defaults for remix site",
    "license": "",
    "sideEffects": false,
    "scripts": {
        "build": "run-s build:*",
        "build:remix": "remix build",
        "build:sass": "sass app/scss:app/css --style compressed --no-source-map",
        "dev": "run-p dev:*",
        "dev:remix": "remix dev",
        "dev:sass": "sass --watch app/scss:app/css",
        "format": "prettier --write .",
        "lint:js": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "lint:scss": "stylelint \"app/scss/**/*.scss\" --cache --cache-location ./node_modules/.cache/stylelint --fix",
        "lint": "run-p lint:*",
        "ntl:ci": "netlify dev",
        "start": "cross-env NODE_ENV=production netlify dev",
        "test": "vitest run --coverage",
        "test:watch": "vitest --coverage",
        "test:e2e": "npx playwright test",
        "test:e2e:codegen": "npx playwright codegen",
        "test:e2e:debug": "npx playwright test --debug",
        "typecheck": "tsc -b"
    },
    "eslintIgnore": [
        "/netlify/functions/server",
        "/node_modules",
        "/public/build",
        "/server/build"
    ],
    "dependencies": {
        "@netlify/functions": "^1.3.0",
        "@portabletext/react": "^2.0.0",
        "@radix-ui/react-icons": "^1.1.1",
        "@remix-run/netlify": "^1.6.8",
        "@remix-run/node": "^1.6.8",
        "@remix-run/react": "^1.6.8",
        "@sanity/client": "^3.4.1",
        "@sanity/preview-kit": "^1.2.9",
        "@sanity/vision": "3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remix-utils": "^4.2.1",
        "sanity": "^3.0.0",
        "sanity-plugin-iframe-pane": "^2.1.1",
        "tiny-invariant": "^1.2.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.28.1",
        "@remix-run/dev": "^1.6.8",
        "@remix-run/eslint-config": "^1.6.8",
        "@remix-run/serve": "^1.6.8",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/eslint": "^8.4.1",
        "@types/react": "^18.0.20",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.2.0",
        "@vitest/coverage-c8": "^0.25.3",
        "cross-env": "^7.0.3",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-testing-library": "^5.9.1",
        "jsdom": "^20.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "sass": "^1.56.1",
        "stylelint": "^14.15.0",
        "stylelint-config-idiomatic-order": "^9.0.0",
        "stylelint-config-prettier": "^9.0.4",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-prettier": "^2.0.0",
        "stylelint-scss": "^4.3.0",
        "typescript": "^4.6.3",
        "vite": "^3.2.4",
        "vite-tsconfig-paths": "^3.6.0",
        "vitest": "^0.25.3"
    },
    "engines": {
        "node": ">=14"
    }
}
